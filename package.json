{
  "name": "cross-platform-tetris",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p electron:serve start:tetris",
    "electron:tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:tsc && npx electron . --serve",
    "build:tetris": "ng build tetris",
    "start:tetris": "ng serve tetris -o",
    "lint:tetris": "ng lint tetris",
    "test:tetris": "ng test tetris",
    "e2e:tetris:": "ng e2e tetris",
    "build:tetris2": "ng build tetris2",
    "start:tetris2": "ng serve tetris2 -o",
    "lint:tetris2": "ng lint tetris2",
    "test:tetris2": "ng test tetris2",
    "e2e:tetris2:": "ng e2e tetris2",
    "build:game-engine": "ng build game-engine-lib --watch",
    "lint:game-engine": "ng lint game-engine-lib",
    "test:game-engine": "ng test game-engine-lib",
    "e2e:game-engine:": "ng e2e game-engine-lib",
    "build:shared": "ng build shared-lib --watch",
    "lint:shared": "ng lint shared-lib",
    "test:shared": "ng test shared-lib",
    "e2e:shared:": "ng e2e shared-lib",
    "postinstall": "electron-builder install-app-deps",
    "build": "npm run electron:tsc && npm run build:tetris -- --base-href ./",
    "build:prod": "npm run build -- -c production",
    "package": "npm run build:prod && electron-builder build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.0",
    "@angular/common": "~11.2.0",
    "@angular/compiler": "~11.2.0",
    "@angular/core": "~11.2.0",
    "@angular/forms": "~11.2.0",
    "@angular/platform-browser": "~11.2.0",
    "@angular/platform-browser-dynamic": "~11.2.0",
    "@angular/router": "~11.2.0",
    "@capacitor/android": "^2.4.5",
    "@capacitor/cli": "^2.4.5",
    "@capacitor/core": "^2.4.5",
    "electron-reload": "^1.5.0",
    "install": "^0.13.0",
    "ng-zzfx": "0.0.6",
    "npm": "^7.5.4",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.0",
    "@angular-devkit/build-ng-packagr": "^0.1002.0",
    "@angular/cli": "~11.2.0",
    "@angular/compiler-cli": "~11.2.0",
    "@angular/language-service": "~11.2.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "electron": "^11.0.5",
    "electron-builder": "^22.9.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.3",
    "typescript": "~4.1.5",
    "wait-for-all": "^3.0.0",
    "wait-on": "^5.2.1"
  }
}
